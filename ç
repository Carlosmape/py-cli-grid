from engine.items.impassables.ImpassableItem import BuildingMaterial, DoorBuildingMaterial, TerrainObstacle
from engine.items.interactives.ProductorItem import ProductorItem


class RockWall(BuildingMaterial):
    def __init__(self):
        super().__init__("rock wall", "it is a dusty rock wall")

class WoodWall(BuildingMaterial):
    def __init__(self):
        super().__init__("wood wall", "it is a wood wall")

BUILDINGMATERIALS = [RockWall, WoodWall]

class HouseDoor(DoorBuildingMaterial):
    def __init__(self) -> None:
        super().__init__("house door", "it is the house's door, keeps intimacy inside")

DOORBUILDINGMATERIALS = [HouseDoor, ]

class Rock(TerrainObstacle):
    def __init__(self) -> None:
        super().__init__("rocks", "a bundle of big rocks")

TERRAINOBSTACLES = [Rock, ]

